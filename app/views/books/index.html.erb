 <h1>Books</h1>
 
 
    <table>
        <thead>
            <tr>
               <th>Title</th>
               <th>body</th>
               <th colspan="3"></th>
            </tr>
        </thead>
        
        <% @books.each do |book| %>
           <tbody>
        
              <tr>
                 <tb><%= book.title %></tb>
                 <tb><%= book.body %></tb>
                 <tb><%= link_to "Show","#" %></tb>
                 <tb><%= link_to "Edit","#" %></tb>
                 <tb><%= link_to "Destroy", "#"%></tb>
              </tr>
           </tbody>
        <% end %>
 
 
 
 
<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>