<body>
    <div class="success">
       <% if flash[:success] %>
             <p id="success">
          <%= flash[:success] %>
             </p>
       <% end %>
   </div>
 

 
 
  <div class="index-container">
     <h1>Books</h1>
        <div class="wrap">
              <table>
                  <tr>
               　    　<th>Title</th>　<th>body</th>　<th colspan="3"></th>
                  </tr>
           
              
                
                <% @books.each do |book| %>
                    <tr>    
                　　      <td><%= book.title %></td>
                        <td><%= book.body %></td>
                        <td><%= link_to "Show",book_path(book.id) %>
                            <%= link_to "Edit",edit_book_path(book.id) %>
                            <%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm" => "本当に削除しますか？"%>
                        </td>
                    </tr>
                <% end %>
           </table>
        </div>
        
     <h2 class="newbook">New book</h2>
     <div class="form_with">
         <%= form_with model:@book, local:true do |f| %>
         <%= render 'shared/error_messages', massage: f.object %>
            <div class="field">
                <p>Title</p>
                <%= f.text_field :title %>
            </div>   

          
            <div class="field">
                <p>Body</p>
                <%= f.text_area :body %>
            </div>
                <%= f.submit 'Create Book',class: "createbox" %>
         
         <% end %>
    </div>

  </div>

</body>
